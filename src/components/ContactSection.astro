---
import { Mail, Phone, MapPin, Calendar, Clock } from "@lucide/astro";

const officeHours = [
  { day: "Sunday", hours: "10:00 am to 4:00 pm" },
  { day: "Monday", hours: "8:00 am to 8:00 pm" },
  { day: "Tuesday", hours: "8:00 am to 8:00 pm" },
  { day: "Wednesday", hours: "8:00 am to 8:00 pm" },
  { day: "Thursday", hours: "8:00 am to 8:00 pm" },
  { day: "Friday", hours: "8:00 am to 8:00 pm" },
  { day: "Saturday", hours: "10:00 am to 4:00 pm" },
];
---

<section id="contact" class="py-12 sm:py-20 px-3 sm:px-6 bg-gradient-to-b from-slate-950 via-slate-900 to-black relative overflow-hidden">
  <!-- Background effects -->
  <div class="absolute inset-0 bg-[radial-gradient(circle_at_1px_1px,rgba(255,255,255,0.015)_1px,transparent_0)] bg-[length:50px_50px]"></div>
  <div
    class="absolute top-1/4 right-1/3 w-32 h-32 sm:w-64 sm:h-64 lg:w-80 lg:h-80 bg-gradient-to-r from-blue-500/5 to-purple-500/5 rounded-full blur-3xl"
  >
  </div>
  <div
    class="absolute bottom-1/4 left-1/6 sm:left-1/4 lg:left-1/3 w-40 h-40 sm:w-72 sm:h-72 lg:w-96 lg:h-96 bg-gradient-to-r from-purple-500/5 to-pink-500/5 rounded-full blur-3xl"
  >
  </div>

  <div class="max-w-sm sm:max-w-4xl lg:max-w-6xl mx-auto relative">
    <div class="text-center mb-12 sm:mb-16">
      <h2
        class="text-3xl sm:text-4xl md:text-5xl font-bold text-white mb-4 sm:mb-6 bg-gradient-to-r from-white via-blue-200 to-purple-200 bg-clip-text text-transparent"
      >
        Let's Create Magic Together
      </h2>
      <div class="w-16 sm:w-24 h-1 bg-gradient-to-r from-blue-500 to-purple-500 mx-auto mb-6 sm:mb-8 rounded-full"></div>
      <p class="text-lg sm:text-xl text-gray-300 max-w-3xl mx-auto leading-relaxed px-2">
        Ready to make your event unforgettable? Get in touch and let's discuss how we can bring your vision to life.
      </p>
    </div>

    <!-- Updated Grid Layout for Small Screens -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 sm:gap-8 lg:items-stretch">
      <!-- Left Column - Contact Information and Office Hours -->
      <div class="grid grid-rows-[auto_1fr] gap-6 sm:gap-8">
        <!-- Office Contact Information -->
        <div class="relative">
          <div class="absolute inset-0 bg-gradient-to-br from-blue-500/10 to-purple-500/10 rounded-2xl sm:rounded-3xl blur-xl"></div>
          <div
            class="relative backdrop-blur-xl bg-gradient-to-br from-slate-800/60 to-slate-900/60 p-4 sm:p-6 lg:p-8 rounded-2xl sm:rounded-3xl border border-white/20"
          >
            <h3 class="text-xl sm:text-2xl font-bold text-white mb-6 sm:mb-8 bg-gradient-to-r from-white to-blue-200 bg-clip-text text-transparent">
              Office
            </h3>

            <div class="space-y-4 sm:space-y-6">
              <!-- Address -->
              <div class="flex items-start space-x-3 sm:space-x-4 group">
                <button
                  class="copy-btn relative w-12 h-12 sm:w-14 sm:h-14 bg-gradient-to-r from-blue-500 to-cyan-500 rounded-xl sm:rounded-2xl flex items-center justify-center group-hover:scale-110 transition-transform duration-300 flex-shrink-0 cursor-pointer"
                  data-copy="136 Windsor St, Kearny, NJ 07032"
                  data-type="address"
                  title="Click to copy address"
                >
                  <MapPin class="w-5 h-5 sm:w-6 sm:h-6 text-white" />
                  <div class="absolute inset-0 bg-gradient-to-r from-blue-500 to-cyan-500 opacity-50 rounded-xl sm:rounded-2xl blur-lg"></div>
                </button>
                <div class="min-w-0">
                  <div class="text-white font-semibold text-base sm:text-lg">Address</div>
                  <div class="text-gray-300 text-sm sm:text-base">
                    136 Windsor St<br />
                    Kearny, NJ 07032
                  </div>
                </div>
              </div>

              <!-- Phone -->
              <div class="flex items-center space-x-3 sm:space-x-4 group">
                <button
                  class="copy-btn relative w-12 h-12 sm:w-14 sm:h-14 bg-gradient-to-r from-purple-500 to-violet-500 rounded-xl sm:rounded-2xl flex items-center justify-center group-hover:scale-110 transition-transform duration-300 flex-shrink-0 cursor-pointer"
                  data-copy="(201)-991-2717"
                  data-type="phone"
                  title="Click to copy phone number"
                >
                  <Phone class="w-5 h-5 sm:w-6 sm:h-6 text-white" />
                  <div class="absolute inset-0 bg-gradient-to-r from-purple-500 to-violet-500 opacity-50 rounded-xl sm:rounded-2xl blur-lg"></div>
                </button>
                <div class="min-w-0">
                  <div class="text-white font-semibold text-base sm:text-lg">Phone</div>
                  <div class="text-gray-300 text-sm sm:text-base">(201)-991-2717</div>
                </div>
              </div>

              <!-- Email -->
              <div class="flex items-center space-x-3 sm:space-x-4 group">
                <button
                  class="copy-btn relative w-12 h-12 sm:w-14 sm:h-14 bg-gradient-to-r from-pink-500 to-rose-500 rounded-xl sm:rounded-2xl flex items-center justify-center group-hover:scale-110 transition-transform duration-300 flex-shrink-0 cursor-pointer"
                  data-copy="DJBrianRodrigues@yahoo.com"
                  data-type="email"
                  title="Click to copy email address"
                >
                  <Mail class="w-5 h-5 sm:w-6 sm:h-6 text-white" />
                  <div class="absolute inset-0 bg-gradient-to-r from-pink-500 to-rose-500 opacity-50 rounded-xl sm:rounded-2xl blur-lg"></div>
                </button>
                <div class="min-w-0">
                  <div class="text-white font-semibold text-base sm:text-lg">Email</div>
                  <div class="text-gray-300 text-sm sm:text-base break-all">DJBrianRodrigues@yahoo.com</div>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Office Hours -->
        <div class="relative self-end">
          <div class="absolute inset-0 bg-gradient-to-br from-green-500/10 to-blue-500/10 rounded-2xl sm:rounded-3xl blur-xl"></div>
          <div
            class="relative backdrop-blur-xl bg-gradient-to-br from-slate-800/60 to-slate-900/60 p-4 sm:p-6 lg:p-8 rounded-2xl sm:rounded-3xl border border-white/20"
          >
            <div class="flex items-center space-x-2 sm:space-x-3 mb-4 sm:mb-6">
              <div
                class="relative w-8 h-8 sm:w-10 sm:h-10 bg-gradient-to-r from-green-500 to-emerald-500 rounded-lg sm:rounded-xl flex items-center justify-center"
              >
                <Clock class="w-4 h-4 sm:w-5 sm:h-5 text-white" />
              </div>
              <h4 class="text-lg sm:text-xl font-bold text-white bg-gradient-to-r from-green-400 to-blue-400 bg-clip-text text-transparent">
                Office Hours
              </h4>
            </div>

            <div class="space-y-2 sm:space-y-3">
              {
                officeHours.map((schedule) => (
                  <div class="flex justify-between items-center py-1.5 sm:py-2 border-b border-white/10 last:border-b-0">
                    <span class="text-gray-300 font-medium text-sm sm:text-base">{schedule.day}</span>
                    <span class="text-white text-xs sm:text-sm">{schedule.hours}</span>
                  </div>
                ))
              }
            </div>

            <div
              class="mt-4 sm:mt-6 p-3 sm:p-4 bg-gradient-to-r from-yellow-500/10 to-orange-500/10 rounded-xl sm:rounded-2xl border border-yellow-500/20"
            >
              <p class="text-yellow-200 font-semibold text-center text-sm sm:text-base">By Appointment Only!</p>
            </div>
          </div>
        </div>
      </div>

      <!-- Right Column - Contact Form and Google Maps -->
      <div class="space-y-6 sm:space-y-8">
        <!-- Contact Form -->
        <div class="relative">
          <div class="absolute inset-0 bg-gradient-to-br from-purple-500/10 to-pink-500/10 rounded-2xl sm:rounded-3xl blur-xl"></div>
          <div
            class="relative backdrop-blur-xl bg-gradient-to-br from-slate-800/60 to-slate-900/60 p-4 sm:p-6 lg:p-8 rounded-2xl sm:rounded-3xl border border-white/20"
          >
            <h3 class="text-xl sm:text-2xl font-bold text-white mb-6 sm:mb-8 bg-gradient-to-r from-white to-purple-200 bg-clip-text text-transparent">
              Send a Message
            </h3>

            <form id="contact-form" class="space-y-4 sm:space-y-6">
              <div class="grid grid-cols-1 sm:grid-cols-2 gap-3 sm:gap-4">
                <input
                  type="text"
                  name="name"
                  placeholder="Your Name"
                  class="w-full px-3 py-3 sm:px-4 sm:py-4 bg-white/5 border border-white/20 rounded-xl sm:rounded-2xl text-white placeholder-gray-400 focus:outline-none focus:border-blue-500/50 focus:bg-white/10 transition-all duration-300 backdrop-blur-sm text-sm sm:text-base"
                  required
                />
                <input
                  type="email"
                  name="email"
                  placeholder="Your Email"
                  class="w-full px-3 py-3 sm:px-4 sm:py-4 bg-white/5 border border-white/20 rounded-xl sm:rounded-2xl text-white placeholder-gray-400 focus:outline-none focus:border-blue-500/50 focus:bg-white/10 transition-all duration-300 backdrop-blur-sm text-sm sm:text-base"
                  required
                />
              </div>

              <div class="grid grid-cols-1 sm:grid-cols-2 gap-3 sm:gap-4">
                <input
                  type="tel"
                  name="phone"
                  placeholder="Phone Number"
                  class="w-full px-3 py-3 sm:px-4 sm:py-4 bg-white/5 border border-white/20 rounded-xl sm:rounded-2xl text-white placeholder-gray-400 focus:outline-none focus:border-blue-500/50 focus:bg-white/10 transition-all duration-300 backdrop-blur-sm text-sm sm:text-base"
                />
                <input
                  type="date"
                  name="eventDate"
                  class="w-full px-3 py-3 sm:px-4 sm:py-4 bg-white/5 border border-white/20 rounded-xl sm:rounded-2xl text-white placeholder-gray-400 focus:outline-none focus:border-blue-500/50 focus:bg-white/10 transition-all duration-300 backdrop-blur-sm text-sm sm:text-base"
                />
              </div>

              <select
                name="eventType"
                class="w-full px-3 py-3 sm:px-4 sm:py-4 bg-white/5 border border-white/20 rounded-xl sm:rounded-2xl text-white focus:outline-none focus:border-blue-500/50 focus:bg-white/10 transition-all duration-300 backdrop-blur-sm text-sm sm:text-base"
                required
              >
                <option value="" class="bg-slate-800">Select Event Type</option>
                <option value="wedding" class="bg-slate-800">Wedding</option>
                <option value="corporate" class="bg-slate-800">Corporate Event</option>
                <option value="private" class="bg-slate-800">Private Party</option>
                <option value="other" class="bg-slate-800">Other</option>
              </select>

              <textarea
                name="message"
                placeholder="Tell me about your event..."
                rows="4"
                class="w-full px-3 py-3 sm:px-4 sm:py-4 bg-white/5 border border-white/20 rounded-xl sm:rounded-2xl text-white placeholder-gray-400 focus:outline-none focus:border-blue-500/50 focus:bg-white/10 transition-all duration-300 resize-none backdrop-blur-sm text-sm sm:text-base"
                required></textarea>

              <button
                type="submit"
                class="group relative w-full py-3 sm:py-4 bg-gradient-to-r from-blue-600 via-purple-600 to-violet-600 text-white font-semibold rounded-xl sm:rounded-2xl hover:from-blue-700 hover:via-purple-700 hover:to-violet-700 transition-all duration-300 transform hover:scale-105 overflow-hidden text-sm sm:text-base"
              >
                <span
                  class="absolute inset-0 bg-gradient-to-r from-blue-400/20 to-purple-400/20 blur-xl group-hover:blur-2xl transition-all duration-300"
                ></span>
                <span class="relative">Send Message</span>
              </button>
            </form>
          </div>
        </div>

        <!-- Google Maps Location -->
        <div class="relative">
          <div class="absolute inset-0 bg-gradient-to-br from-purple-500/10 to-pink-500/10 rounded-2xl sm:rounded-3xl blur-xl"></div>
          <div
            class="relative backdrop-blur-xl bg-gradient-to-br from-slate-800/60 to-slate-900/60 p-4 sm:p-6 lg:p-8 rounded-2xl sm:rounded-3xl border border-white/20"
          >
            <h4
              class="text-lg sm:text-xl font-bold text-white mb-3 sm:mb-4 bg-gradient-to-r from-purple-400 to-pink-400 bg-clip-text text-transparent"
            >
              Our Location
            </h4>
            <div
              class="w-full h-48 sm:h-64 bg-gradient-to-br from-gray-800 to-gray-900 rounded-xl sm:rounded-2xl flex items-center justify-center border border-white/10"
            >
              <div class="text-center">
                <MapPin class="w-10 h-10 sm:w-12 sm:h-12 text-gray-400 mx-auto mb-3 sm:mb-4" />
                <p class="text-gray-400 text-xs sm:text-sm">Google Maps will be integrated here</p>
                <p class="text-gray-500 text-xs mt-1 sm:mt-2">Kearny, NJ Service Area</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Enhanced Footer -->
    <div class="mt-16 sm:mt-20 pt-6 sm:pt-8 border-t border-white/10 text-center relative">
      <div
        class="absolute top-0 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-24 sm:w-32 h-1 bg-gradient-to-r from-transparent via-white/20 to-transparent"
      >
      </div>

      <!-- Social Media Links -->
      <div class="flex justify-center items-center space-x-6 mb-6">
        <a
          href="https://www.youtube.com/@DJBrianRodrigues"
          target="_blank"
          rel="noopener noreferrer"
          class="social-link group relative p-3 rounded-xl transition-all duration-300 hover:bg-red-500/10 hover:scale-110"
          title="Follow on YouTube"
        >
          <svg class="w-5 h-5 text-gray-400 group-hover:text-red-400 transition-colors duration-300" fill="currentColor" viewBox="0 0 24 24">
